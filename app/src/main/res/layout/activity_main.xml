<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/agarwal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="56dp"
        android:textSize="36sp"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        android:text="Username"

        android:id="@+id/username"/>

    <EditText
        android:id="@+id/userId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="5dp"
        android:layout_alignBottom="@id/username"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="-48dp"
        android:background="#FFFFFF"
        android:hint="Enter your email id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/userId"
        android:layout_marginBottom="-49dp"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:id="@+id/password"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/password"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:drawableStart="@drawable/ic_baseline_check_24"
        android:password="true"

        android:drawablePadding="5dp"
        android:layout_marginBottom="-54dp"
        android:id="@+id/enteredPassword"
        android:background="#FFFFFF"
        android:hint="Enter your password"/>

    <Button
        android:id="@+id/login"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/enteredPassword"


        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="-83dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="login"
        android:textColor="@color/BLACK"
        android:textSize="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your account"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textColor="#FF4500"
        android:onClick="create"
        />

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/login"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="-44dp"
        android:onClick="forgot"
        android:paddingRight="20dp"
        android:text="forgot password"
        android:textColor="#FF4500" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/forgot"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="139dp"
        android:layout_marginBottom="-48dp"
        android:paddingRight="20dp"
        android:text="No. of attempts: 4"
        android:textColor="#FF4500" />


</RelativeLayout>